<body>
<h1>Ingreso de productos</h1>
<br>
<form  method="POST" action="/productos/hbs">
  <div class="form-col-12">
    <div class="col" id="title">
      <h5>ID</h5>
      <input style="p-5" name="id" type="text" class="form-control" placeholder="First name">
    </div>
    <div class="col" id="title">
      <h5>Nombre producto</h5>
      <input style="p-5" name="title" type="text" class="form-control" placeholder="First name">
    </div>
    <br>
    <div class="col" id="price">
    <h5>Precio producto</h5>
      <input type="number" name="price" class="form-control" placeholder="precio producto">
      </div>
    </div>
    <br> 
</form>
<button type="submit" class="btn btn-success">AGREGAR PRODUCTO</button>
<div role="main" class="container">
  <h1 class="mt-5">Productos</h1>
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Titulo</th>
        <th scope="col">Precio</th>
      </tr>
    </thead>
    <tbody>
      {{#each dataArray}}
      <tr>
        <th scope="col">{{this.id}}</th>
        <th scope="col">{{this.title}}</th>
        <th scope="col">{{this.price}}</th>
      </tr>

      {{/each}}
    </tbody>
 
  </table>
</div>

